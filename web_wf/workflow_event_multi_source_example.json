{
  "options": {
    "type": "workflow_options",
    "name": "Multi-Source Event Demo",
    "description": "Demonstrates listening to multiple event sources (timer OR file watcher). Triggers on whichever event comes first."
  },
  "nodes": [
    {
      "type": "start_flow",
      "extra": { "name": "Start" }
    },
    {
      "type": "loop_start_flow",
      "condition": true,
      "max_iter": 15,
      "extra": { "name": "Multi-Event Loop" }
    },
    {
      "type": "event_listener_flow",
      "sources": ["timer_heartbeat", "fswatch_inbox"],
      "mode": "any",
      "timeout_ms": null,
      "extra": { "name": "Wait for Timer OR File" }
    },
    {
      "type": "transform_flow",
      "expression": "f\"[{source_id}] \" + (f\"Tick #{event.get('count')}\" if 'timer' in source_id else f\"File: {event.get('path', '?').split('/')[-1]}\")",
      "extra": { "name": "Format by Source" }
    },
    {
      "type": "preview_flow",
      "extra": { "name": "Show Event" }
    },
    {
      "type": "loop_end_flow",
      "extra": { "name": "Loop End" }
    },
    {
      "type": "end_flow",
      "extra": { "name": "End" }
    }
  ],
  "edges": [
    { "source": 0, "target": 1, "source_slot": "output", "target_slot": "input" },
    { "source": 1, "target": 2, "source_slot": "iteration", "target_slot": "input" },
    { "source": 2, "target": 3, "source_slot": "event", "target_slot": "input" },
    { "source": 2, "target": 3, "source_slot": "source_id", "target_slot": "source_id" },
    { "source": 3, "target": 4, "source_slot": "output", "target_slot": "input" },
    { "source": 4, "target": 5, "source_slot": "output", "target_slot": "input" },
    { "source": 5, "target": 6, "source_slot": "output", "target_slot": "input" },
    { "source": 5, "target": 1, "source_slot": "output", "target_slot": "input", "loop": true }
  ],
  "_setup_instructions": {
    "description": "Create BOTH event sources before running this workflow",
    "api_calls": [
      {
        "description": "Create heartbeat timer (every 5 seconds)",
        "method": "POST",
        "url": "/event-sources/timer",
        "body": {
          "id": "timer_heartbeat",
          "name": "Heartbeat Timer",
          "interval_ms": 5000,
          "max_triggers": -1
        }
      },
      {
        "description": "Create inbox folder watcher",
        "method": "POST",
        "url": "/event-sources/fswatch",
        "body": {
          "id": "fswatch_inbox",
          "name": "Inbox Watcher",
          "path": "./inbox",
          "recursive": false,
          "patterns": ["*"],
          "events": ["created"]
        }
      }
    ],
    "note": "Workflow triggers every 5s OR when a new file appears in ./inbox. Create the inbox directory first."
  }
}
