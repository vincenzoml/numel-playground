{
  "options": {
    "type": "workflow_options",
    "name": "Polling with Batch Demo",
    "description": "Demonstrates polling with batching. Loop polls 9 times (500ms each). Gate collects polls and fires every 3, outputting a batch of accumulated items."
  },
  "nodes": [
    {
      "type": "start_flow",
      "extra": { "name": "Start" }
    },
    {
      "type": "loop_start_flow",
      "condition": true,
      "max_iter": 9,
      "extra": { "name": "Poll Loop (9x)" }
    },
    {
      "type": "delay_flow",
      "duration_ms": 500,
      "extra": { "name": "Wait 500ms" }
    },
    {
      "type": "preview_flow",
      "extra": { "name": "Poll Result" }
    },
    {
      "type": "gate_flow",
      "threshold": 3,
      "reset_on_fire": true,
      "extra": { "name": "Batch Every 3" }
    },
    {
      "type": "preview_flow",
      "extra": { "name": "Batch Output" }
    },
    {
      "type": "loop_end_flow",
      "extra": { "name": "Loop End" }
    },
    {
      "type": "end_flow",
      "extra": { "name": "End" }
    }
  ],
  "edges": [
    { "source": 0, "target": 1, "source_slot": "output", "target_slot": "input" },
    { "source": 1, "target": 2, "source_slot": "iteration", "target_slot": "input" },
    { "source": 2, "target": 3, "source_slot": "output", "target_slot": "input" },
    { "source": 3, "target": 4, "source_slot": "output", "target_slot": "input" },
    { "source": 4, "target": 5, "source_slot": "accumulated", "target_slot": "input" },
    { "source": 5, "target": 6, "source_slot": "output", "target_slot": "input" },
    { "source": 6, "target": 7, "source_slot": "output", "target_slot": "input" },
    { "source": 6, "target": 1, "source_slot": "output", "target_slot": "input", "loop": true }
  ]
}
